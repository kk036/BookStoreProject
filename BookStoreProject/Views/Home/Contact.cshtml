                            <div class="col-3">
                                <div class="con-icon">
                                    <span class="fa fa-home"></span>
                                </div>
                            </div>
                            <div class="col-9">
                                <h6>Address</h6>
                                <p>
                                    Books World
                                    <br>SR Ecommerce Factory Pvt.Ltd
                                    <br>Papatoe,NZ
                                </p>
                            </div>
                        </div>
                    </li>

                    <li>
                        <div class="row mt-5">
                            <div class="col-3">
                                <div class="con-icon">
                                    <span class="fa fa-envelope"></span>
                                </div>
                            </div>
                            <div class="col-9">
                                <h6>Email</h6>
                                <a href="mailto:info@example.com">admin@booksworld.com</a>
