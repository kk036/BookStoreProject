                    <div class="form-group mt-4">
                        <label>Name</label>
                        <input id="txtName" type="text" name="txtName" class="form-control" placeholder="" required="" />

                    </div>
                    <div class="form-group mt-4">
                        <label>Eamil</label>
                        <input id="txtEmail" type="email" name="txtEmail" class="form-control" placeholder="" required="" />
                    </div>

                    <div class="form-group mt-4">
                        <label class="mb-2">Contact</label>
                        <input id="txtContact" type="text" name="txtContact" class="form-control" placeholder="" required="" />
                    </div>
                    <div class="form-group mt-4">
                        <label class="mb-2">Message</label>
                        <textarea id="txtMsg" name="txtMsg" class="form-control" placeholder="" required=""></textarea>
                    </div>
                    <input id="btnSubmit" class="btn btn-primary submit mb-4" type="submit" value="Send Query " />
                    

                </form>

            </div>
        </div>

        <div class="map-wthree mt-5 p-2">
