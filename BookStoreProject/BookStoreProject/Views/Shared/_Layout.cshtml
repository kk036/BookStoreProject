<!DOCTYPE html>
<html>
<head>
    <title>Books World</title>
    <!-- Meta tag Keywords -->
    <script>
        addEventListener("load", function() {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }

    </script>
    <!-- //Meta tag Keywords -->
    <!-- Custom-Files -->
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <!-- Bootstrap-Core-CSS -->
    <link rel="stylesheet" href="~/css/style.css" type="text/css" media="all" />
    <!-- Style-CSS -->
    <!-- font-awesome-icons -->
    <link href="~/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome-icons -->
    <!-- /Fonts -->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Playfair+Display:400,400i,700,700i,900,900i" rel="stylesheet">
    <!-- //Fonts -->



</head>
<body>
    <!-- home -->
    <div id="home">
        <!-- banner -->
        <div class="top_w3pvt_main container">

            <!-- nav -->
            <div class="nav_w3pvt text-center ">
                <!-- nav -->
                <nav class="lavi-wthree">
                    <div id="logo">
                        <h1>
                            <a class="navbar-brand" href="#">Books</a>
                        </h1>
                    </div>

                    <label for="drop" class="toggle">Menu</label>
                    <input type="checkbox" id="drop" />
                    <ul class="menu mr-auto">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li> @Html.ActionLink("About", "About", "Home")</li>

                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                        <li class="log-vj ml-lg-5"><a href="" class="fa fa-user-circle-o" aria-hidden="true"></span> Join</a>
                    </ul>
                </nav>
                <!-- //nav -->
            </div>
        </div>
        <!-- //nav -->
        <!-- banner slider -->
        <div id="homepage-slider" class="st-slider">
            <input type="radio" class="cs_anchor radio" name="slider" id="play1" checked="" />
            <input type="radio" class="cs_anchor radio" name="slider" id="slide1" />
            <input type="radio" class="cs_anchor radio" name="slider" id="slide2" />
            <input type="radio" class="cs_anchor radio" name="slider" id="slide3" />
            <div class="images">
                <div class="images-inner">
                    <div class="image-slide">
                        <div class="banner-w3pvt-1">
                            <div class="overlay-wthree"></div>

                        </div>
                    </div>
                    <div class="image-slide">
                        <div class="banner-w3pvt-2">
                            <div class="overlay-wthree"></div>
                        </div>
                    </div>
                    <div class="image-slide">
                        <div class="banner-w3pvt-3">
                            <div class="overlay-wthree"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="labels">
                <div class="fake-radio">
                    <label for="slide1" class="radio-btn"></label>
                    <label for="slide2" class="radio-btn"></label>
                    <label for="slide3" class="radio-btn"></label>
                </div>
            </div>
            <!-- banner-w3ls-info -->
            <div class="banner-w3ls-info">
                <div class="content-bg-1 one-bg">
                    <span class="fa fa-lightbulb-o" aria-hidden="true"></span>
                    <h3 class="ban-text">
                        Creative Study Pattern
                    </h3>
                </div>
                <div class="content-bg-1 two-bg">
                    <span class="fa fa-book"></span>
                    <h3 class="ban-text">
                        Quick Crash Courses
                    </h3>
                </div>
                <div class="content-bg-1 third-bg">
                    <span class="fa fa-shield" aria-hidden="true"></span>
                    <h3 class="ban-text">
                        Certification Awarded
                    </h3>
                </div>
            </div>
            <!-- //banner-w3ls-info -->
        </div>
        <!-- //banner slider -->
    </div>
    <!-- //banner -->
    <!-- //home -->







    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>


    <!-- testimonials -->
    <section class="testimonials py-5" id="test">
        <div class="container py-xl-5 py-lg-3">
            <h3 class="tittle-wthree text-center">Top Authors</h3>
            <p class="sub-tittle text-center mt-4 mb-sm-5 mb-4"></p>
            <div class="row">
                <div class="col-lg-4 testimonials_grid mt-3">
                    <div class="p-lg-5 p-4 testimonials-gd-vj">

                        <div class="row mt-4">
                            <div class="col-3 testi-img-res">
                                <img src="~/images/te1.jpg" alt=" " class="img-fluid" />
                            </div>
                            <div class="col-9 testi_grid">
                                <h5 class="mb-2">
                                    A K Singh
                                </h5>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 testimonials_grid mt-3">
                    <div class="p-lg-5 p-4 testimonials-gd-vj">

                        <div class="row mt-4">
                            <div class="col-3 testi-img-res">
                                <img src="~/images/te2.jpg" alt=" " class="img-fluid" />
                            </div>
                            <div class="col-9 testi_grid">
                                <h5 class="mb-2">Sarika Verma</h5>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 testimonials_grid mt-3">
                    <div class="p-lg-5 p-4 testimonials-gd-vj">

                        <div class="row mt-4">
                            <div class="col-3 testi-img-res">
                                <img src="~/images/te3.jpg" alt=" " class="img-fluid" />
                            </div>
                            <div class="col-9 testi_grid">
                                <h5 class="mb-2">Jeff Kinney</h5>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- //testimonials -->
    <!-- footer -->
    <footer class="py-5">
        <div class="container py-sm-3">
            <div class="row footer-grids">
                <div class="col-lg-3 col-sm-6 mb-lg-0 mb-sm-5 mb-4">
                    <h2>
                        <a class="navbar-brand mb-3" href="index.html">Books World</a>
                    </h2>
                    <p class="mb-3">Quality is our Prefrence so, always choose books world as Prirorty.</p>
                    <h5>Trusted by <span>500+ People</span> </h5>
                </div>
                <div class="col-lg-3 col-sm-6 mb-md-0 mb-sm-5 mb-4">
                    <h4 class="mb-4">Address Info</h4>.
                    <p><span class="fa mr-2 fa-map-marker"></span>SR Ecommerce Factory Pvt. Ltd<span>Papatoe,NZ.</span></p>
                    <p class="phone py-2"><span class="fa mr-2 fa-phone"></span> +64 35 558 58 55 </p>
                    <p><span class="fa mr-2 fa-envelope"></span><a href="#">admin@booksworld.com</a></p>
                </div>


            </div>
        </div>
    </footer>
    <!-- //footer -->
    <!-- copyright -->
    <div class="copy_right p-3 d-flex justify-content-around">

        <p>
            © 2019 Books World. All rights reserved | Design by
            <a href="#">Kuldeep Kaur</a>

        </p>
        <!-- move top -->
        <div class="move-top">
            <a href="#home" class="move-top">
                <span class="fa fa-angle-double-up mt-3" aria-hidden="true"></span>
            </a>
        </div>
        <!-- move top -->
    </div>
    <!-- //copyright -->





</body>
</html>
